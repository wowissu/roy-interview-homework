{
  "extends": "@quasar/app/tsconfig-preset",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "newLine": "lf",
    // "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "types": ["quasar"],
    "typeRoots": ["src/@types", "node_moudles/@types"],
    "paths": {
      "src/*": ["src/*"],
      "app/*": ["*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "assets/*": ["src/assets/*"],
      "boot/*": ["src/boot/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
